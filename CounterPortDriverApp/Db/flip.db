## flip.db

record(ai, "$(USER):get:set:one")
{
    field(PINI, "1")
    field(DTYP, "asynFloat64")
    field(INP, "@asyn($(PORT),$(ADDR),$(TIMEOUT))SINE_WAVE")
    field(SCAN, "I/O Intr")
  }

record(ao, "$(USER):get:set:two")
{
    field(PINI, "1")
    field(DTYP, "asynFloat64")
    field(OUT, "@asyn($(PORT),$(ADDR),$(TIMEOUT))SINE_WAVE")
  }

record(calcout, "$(USER):sine:wave")
{
  field(INPA, "1")
  field(SCAN, ".1 second")
  field(CALC, "sin(a); a:=a+D2R")
  field(OUT, "$(USER):get:set:two PP")
  }
