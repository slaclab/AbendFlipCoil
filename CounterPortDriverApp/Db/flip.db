## flip.db


#This is a sort of redundant record atm, eventually will be output record for stuff
record(ai, "$(P):INTEGRAL_RECEIVER_SENDER")
{
    field(PINI, "1")
    field(DTYP, "asynFloat64")
    field(INP, "@asyn($(PORT),$(ADDR),$(TIMEOUT))SINE_WAVE")
    #field(SCAN, "I/O Intr")
  }

#Currently takes data from an epics record 
record(ao, "$(P):INTEGRAL_RECEIVER")
{
    field(PINI, "1")
    field(DTYP, "asynFloat64")
    field(OUT, "@asyn($(PORT),$(ADDR),$(TIMEOUT))SINE_WAVE")
  }

record(calcout, "$(P):SINE_WAVE_GENERATOR")
{
  field(INPA, "1")
  #field(SCAN, ".1 second")
  field(CALC, "3 * sin(2*a); a:=a+D2R")
  field(OUT, "$(P):INTEGRAL_RECEIVER PP")
  }

record(mbbo, "$(P):MEM_MODE")
{
    field(DTYP, "asynInt32")
    field(OUT, "@asyn($(PORT),$(ADDR),$(TIMEOUT))MEM_MODE")
    field(ZRVL, "0")
    field(ZRST, "OFF")
    field(ONVL, "1")
    field(ONST, "LIFO")
    field(TWVL, "2")
    field(TWST, "FIFO")
  }

